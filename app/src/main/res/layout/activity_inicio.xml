<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3fa"
    tools:context=".Inicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="510dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/casilla_logologinazul"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLogoLogin"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginBottom="105dp"
                        app:srcCompat="@drawable/pulperia_maritza_oscuro" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTodoLoQueBuscas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="TODO LO QUE BUSCAS"
                    android:textAlignment="center"
                    android:textColor="#14213D"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/lblEstaAqui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="¡ESTÁ AQUÍ!"
                    android:textAlignment="center"
                    android:textColor="#d78a04"
                    android:textSize="26dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnIniciarSesionInicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/casilla_azul_separador"
                android:elevation="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:onClick="iniciarSesion"
                android:text="Iniciar Sesión"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/btnRegistrarseInicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/casilla_azul_separador"
                android:elevation="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:onClick="registrarse"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>