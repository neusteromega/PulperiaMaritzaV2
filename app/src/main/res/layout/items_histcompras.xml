<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCodigoVentaTituloHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="CÃ³digo:"
                    android:textColor="#14213D"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/lblCodigoVentaHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="1234567890"
                    android:textColor="#14213D"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblFechaVentaTituloHist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:text="Fecha:"
                    android:textColor="#4263AC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/lblFechaVentaHist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center|left"
                    android:text="00/00/0000"
                    android:textColor="#4263AC"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTotalVentaHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="right"
                android:text="L.000.00"
                android:textColor="#14213D"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/btnExpandirVentaHist"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/icono_expandirazul" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>